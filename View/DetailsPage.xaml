<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.DetailsPage"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
             x:DataType="viewmodel:CharacterDetailsViewModel"
             Title="{Binding Character.name}">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="160, Auto">
            <BoxView Grid.ColumnSpan="3"
                     Background="{StaticResource Primary}"
                     HeightRequest="160"
                     HorizontalOptions="FillAndExpand"/>
            <Frame Grid.RowSpan="2"
                   Grid.Column="1"
                   Margin="0,80,0,0"
                   HeightRequest="160"
                   WidthRequest="160"
                   HorizontalOptions="Center"
                   Padding="0"
                   IsClippedToBounds="True"
                   CornerRadius="80">
                <Image Aspect="AspectFill"
                       HeightRequest="160"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Source="{Binding Character.fruit.filename}"
                       WidthRequest="160"/>
            </Frame>
        </Grid>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label Style="{StaticResource MediumLabel}" Text="{Binding Character.job}"/>
            <Label Style="{StaticResource MicroLabel}" Text="{Binding Character.crew.roman_name, StringFormat='Banda: {0}'}"/>
            <Label Style="{StaticResource MicroLabel}" Text="{Binding Character.bounty, StringFormat='Recompensa: {0}'}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>